<div class="row login-form">
  <div class="col s12 m6">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title center">新規登録</span>
        <div class="divider"></div>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
          <% if devise_error_messages? || alert %>
            <div class="form-errors red lighten-1">
              <%= devise_error_messages! %>
              <%= alert %>
            </div>
          <% end %>
          <div class="form-inputs row">
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <%= f.email_field :email, autofocus: true, required: true %>
              <%= f.label :email %>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <%= f.password_field :password, autocomplete: "off", required: true %>
              <%= f.label :password %>
              <span class="hint-text">
                <%= @minimum_password_length %>
                文字以上必要です
              </span>
            </div>
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
              <%= f.label :password_confirmation %>
            </div>
          </div>
          <div class="form-actions center">
            <%= f.submit "登録する！", class: "btn white-text waves-effect" %>
          </div>
        <% end %>
      </div>
      <div class="card-action">
        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
