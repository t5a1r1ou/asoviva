<div class="cards-container container">
  <% unless @users.empty? %>
  <% @users.each do |user| %>
    <div class="card-container">
      <div class="col s12 m4">
        <div class="card">
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">favorite</i></a>
          <div class="chip chip_position white-text indigo"><%= user.name %></div>
          <div class="card-content">
            <%= link_to user do %>
            <span class="card-title black-text">
              <%= user.name %><span class="title-suffix"></span>
            </span>
            <p class="black-text">
              <%= user.name %>
            </p>
            <% end %>
          </div>
          <div class="card-action card-descriptions indigo">
            <div>
              <p class="white-text"><%= User.human_attribute_name(:name) %></p>
              <p class="amber-text darken-4"><%= user.name %></p>
            </div>
            <div>
              <p class="white-text"><%= User.human_attribute_name(:count) %></p>
              <p class="amber-text darken-4"><%= user.name %></p>
            </div>
            <div>
              <p class="white-text"><%= User.human_attribute_name(:name) %></p>
              <p class="amber-text darken-4"><%= user.name %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% else %>
  <p>まだユーザーがいません</p>
</div>
<% end %>
