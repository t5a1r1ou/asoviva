<%= render "fixedbutton" %>
<%= render "search_modal" %>
<%= render partial: "layouts/errors_toast", locals: { element: @post } %>
<%= render "layouts/toast" %>
<% unless params[:q].nil? %>
<div class="container">
  <p><%= searched_name_by %><%= searched_category_by %><%= searched_area_by %> での検索結果</p>
</div>
<% end %>
<div class="container">
  <div class="cards-container">
    <% if not @posts.empty? %>
    <%= render partial: "posts_cards", collection: @posts, as: :post, locals: { bool: true } %>
    <% elsif not params.nil? %>
    <p>条件に一致する投稿が見つかりません</p>
    <% else %>
    <p>まだ投稿がありません</p>
  </div>
  <% end %>
</div>
  <div class="pagenation-height">
    <%= paginate @posts %>
  </div>
</div>
