<%= render "posts/fixedform" %>

<div class="cards-container container">
  <% @posts.each do |post| %>
    <div class="card-container">
      <div class="col s12 m4">
        <div class="card indigo">
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">favorite</i></a>
          <div class="card-content white">
            <%= link_to post do %>
            <span class="card-title black-text">
              <%= post.name %><span class="title-suffix">に行きたい！</span>
            </span>
            <p class="black-text">
              <%= post.description.truncate(12) %>
            </p>
            <% end %>
          </div>
          <div class="card-action card-descriptions">
            <div>
              <p class="white-text"><%= Post.human_attribute_name(:deadline) %></p>
              <p class="amber-text"><%= post.deadline %></p>
            </div>
            <div>
              <p class="white-text"><%= Post.human_attribute_name(:count) %></p>
              <p class="amber-text"><%= post.count_about %></p>
            </div>
            <div>
              <p class="white-text"><%= Post.human_attribute_name(:area) %></p>
              <p class="amber-text"><%= post.area %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="container pagenation-height">
  <%= paginate @posts %>
</div>
