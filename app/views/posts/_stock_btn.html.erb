<% if user_signed_in? && !current_user?(post.user) %>
  <% if post.stocked_by?(current_user) %>
    <%= link_to post_stocks_path(post.id), method: :delete, class: "btn-floating halfway-fab waves-effect waves-light red ajax_stock", remote: true do %>
      <i class="material-icons">favorite</i>
    <% end %>
  <% else %>
    <%= link_to post_stocks_path(post.id), method: :post, class: "btn-floating halfway-fab waves-effect waves-light red ajax_stock", remote: true do %>
      <i class="material-icons">favorite_border</i>
    <% end %>
  <% end %>
<% end %>
